#!/bin/bash

# This script performs a time profile on commands

# Quiet Mode Output
# 
# Command             [45s]
# 

start=$(node -e 'console.log(Date.now())')

if test $1 = '-q' -o $1 = '--quiet'; then
    quiet=0
    shift
    $* &> /tmp/err &
    exit_status=$?
    pid=$!

    while ps -p $pid > /dev/null; do
      end=$(node -e 'console.log(Date.now())')
      elapsed=$(bc <<< "scale=2; $((end - start)) / 1000")
      printf "  ðŸ‘‰ $YELLOW%-60s$NC$GREEN[%0.1fs]$NC\r" "$*" $elapsed
    done

    end=$(node -e 'console.log(Date.now())')
    elapsed=$(bc <<< "scale=2; $((end - start)) / 1000")
    printf "  ðŸ‘‰ $YELLOW%-60s$NC$GREEN[%0.1fs]$NC\n" "$*" $elapsed
    echo -e $NC
    exit $exit_status
else
    echo -e "  ðŸ‘‰ $YELLOW$*$NC"
    $*
    exit_status=$?
fi

end=$(node -e 'console.log(Date.now())')
elapsed=$(bc <<< "scale=2; $((end - start)) / 1000")

if test $exit_status -ne 0; then
  echo
  cat /tmp/err
  echo -e "  âŒ ${RED}$* ${RED}failed in ${elapsed}s ${NC}"
  exit $exit_status
fi

printf "  ðŸ‘‰ $YELLOW%-60s$NC$GREEN[${elapsed}s]$NC\n" "$*"

exit $exit_status
